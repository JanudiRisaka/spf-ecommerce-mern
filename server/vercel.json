{
  "version": 2,
  "builds": [
    { "src": "api/health.ts",   "use": "@vercel/node@2.15.10" },
    { "src": "api/dbstatus.ts", "use": "@vercel/node@2.15.10" },
    { "src": "api/index.ts",    "use": "@vercel/node@2.15.10" }
  ],
  "routes": [
    { "src": "/api/health",     "dest": "api/health.ts" },
    { "src": "/api/db-status",  "dest": "api/dbstatus.ts" },
    { "src": "/api/(.*)",       "dest": "api/index.ts" }
  ]
}
